<header>
    <%= render "shared/partial" %>
</header>

<h3>スケジュール一覧</h3>

<% if flash[:notice] %>
<p class="notice"><%= flash[:notice] %></P>
<% end %>
<table>
  <thead>
    <tr>
      <th>id</th>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>終日</th>
      <th>更新日時</th>
      <th>詳細</th>
      <th>編集</th>
      <th>削除</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.title %></td>
        <td><%= post.start_day %></td>
        <td><%= post.end_day %></td>
        <td>
        <% if post.is_all_day == true %>
        ⚪︎
        <% else post.is_all_day == false %>
        <% end %>
        </td>
        <td><%= post.updated_at.to_s(:datetime_jp) %></td>
        <td><%= link_to "詳細" , post %></td>
        <td><%= link_to "編集" , [:edit, post] %></td>
        <td><%= button_to "削除" , post,  method: :delete ,
              data:{confirm: "削除しますか？"}  %></td>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to "スケジュール新規登録", :new_post %></p>


<div>予定の合計数 <%= Post.count %></div>

<% require 'date' %>
<% day = Date.today %>
<div>本日の日付 <%= day %></div>